page {
  height: 100%;
  width: 100%;
}
.query-result {
  overflow: hidden;
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: #eeeeee;
}
.query-result .result-content {
    padding: 0px;
    border: 8px solid #eeeeee;
    height: 100%;
    width: 100%;
    background-color: white;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.query-result .result-content .result-img-title {
      width: 100%;
      height: 130px;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
          -ms-flex-pack: center;
              justify-content: center;
}
.query-result .result-content .result-img-title .result-img {
        width: 38%;
        height: 80%;
}
.query-result .result-content .result-form {
      width: 100%;
      height: 60px;
}
.query-result .result-content .result-form .result-form-item {
        margin-left: 30px;
        font-size: 14px;
        height: 25px;
        line-height: 25px;
        color: #cfcfcf;
}
.query-result .result-content .result-form .result-form-item .result-label {
          display: inline-block;
}
.query-result .result-content .result-form .result-form-item .result-input {
          display: inline-block;
}
.query-result .result-content .result-form-input {
      padding-left: 20px;
      margin-bottom: 10px;
      /* height: 100px; */
}
.query-result .result-content .result-form-input .result-input-item {
        font-size: 13px;
        display: inline-block;
        margin-left: 10px;
        margin-bottom: 10px;
        padding: 5px 10px;
        border-radius: 6px;
        color: #888b92;
        background-color: #e7e7e7;
}
.query-result .result-content .result {
      text-align: center;
}
.query-result .result-content .result .result-total-single {
        margin-bottom: 10px;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        padding-left: 30px;
}
.query-result .result-content .result .result-total-single ._span {
          color: #888b92;
          margin: 0 5px;
          font-size: 15px;
}
.query-result .result-content .result .result-total-single .total {
          font-size: 13px;
          display: inline-block;
          padding: 5px 10px;
          border-radius: 6px;
          color: #f4c153;
          background-color: #e7e7e7;
          font-weight: bold;
          width: 60px;
}
.query-result .result-content .result-bottom {
      font-size: 13px;
      text-align: center;
      color: #cfcfcf;
}
.query-result .result-content .bottom-button-group {
      margin-top: 50px;
}
.query-result .result-content .bottom-button-group .bottom-button-item1 {
        display: inline-block;
        background-color: #f4c153;
        color: white;
        float: left;
        margin-left: 30px;
        font-size: 13px;
        padding: 0px 30px;
        border-radius: 6px;
}
.query-result .result-content .bottom-button-group .bottom-button-item2 {
        display: inline-block;
        background-color: #f4c153;
        color: white;
        float: right;
        margin-right: 30px;
        font-size: 13px;
        border-radius: 6px;
        padding: 0px 30px;
}


page {
  height: 100%;
  width: 100%;
}
.user-center {
  overflow: hidden;
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: #eeeeee;
}
.user-center .container-user {
    padding: 0px;
    border: 8px solid #eeeeee;
    height: 200px;
    background-color: white;
}
.user-center .user-motto {
    width: 100%;
    height: 400px;
    background-color: white;
    border: 8px solid #eeeeee;
    padding: 0px;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.user-center .user-motto .save-button {
      border-radius: 100px;
      width: 70%;
      background-color: #f4c153;
      margin-left: 10px;
      margin-right: 10px;
      margin-top: 20px;
}
.user-center .user-motto .evaluate-list {
      height: 50px;
      line-height: 50px;
      font-size: 16px;
      border-bottom: 2px solid ghostwhite;
}
.user-center .user-motto .evaluate-list .user-center-input {
        display: inline-block;
        vertical-align: middle;
        margin-left: 20px;
        width: 120px;
}
.user-center .user-motto .evaluate-list .radio-group {
        display: inline-block;
        vertical-align: middle;
        margin-left: 28px;
}
.user-center .user-motto .evaluate-list .user-image-icons {
        float: left;
        margin-top: 9px;
        margin-left: 20px;
        margin-right: 20px;
}
.user-center .user-motto .evaluate-list .evaluate-value {
        color: #c5c8cf;
        float: right;
        margin-right: 13px;
}
.user-center .user-motto .evaluate-list ._img {
        width: 32px;
        height: 32px;
}
.user-center .support {
    text-align: center;
}


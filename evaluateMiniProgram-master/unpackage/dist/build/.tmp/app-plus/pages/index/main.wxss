page {
  height: 100%;
  width: 100%;
}
.user-center {
  overflow: hidden;
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: #eeeeee;
}
.user-center .container-user {
    padding: 0px;
    border: 8px solid #eeeeee;
    height: 200px;
    background-color: white;
}
.user-center .user-motto {
    width: 100%;
    height: 300px;
    background-color: white;
    border: 8px solid #eeeeee;
    border-top: 0px solid #eeeeee;
    padding: 0px;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.user-center .user-motto .evaluate-list {
      height: 50px;
      line-height: 50px;
      font-size: 16px;
      /* display:flex;
      align-items:center;*/
      border-bottom: 2px solid ghostwhite;
}
.user-center .user-motto .evaluate-list .user-image-icons {
        float: left;
        margin-top: 9px;
        margin-left: 20px;
        margin-right: 20px;
}
.user-center .user-motto .evaluate-list .evaluate-value {
        color: #c5c8cf;
        float: right;
        margin-right: 15px;
}
.user-center .user-motto .evaluate-list ._img {
        width: 32px;
        height: 32px;
}
.user-center .support {
    text-align: center;
    font-size: 13px;
}
.userinfo {
  position: relative;
  width: 375px;
  height: 160px;
  color: #c5c8cf;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 80px;
  height: 80px;
  margin: 10px;
  margin-top: 25px;
  border-radius: 50%;
  border: 2px solid #fff;
  -webkit-box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
          box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.userinfo text {
  /* color: #fff; */
  font-size: 14px;
  background-color: #c0c0c0;
  border-radius: 40%;
}

